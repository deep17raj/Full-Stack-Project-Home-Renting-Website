<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h3 class="col-6 offset-5 mb-3">SignUp </h3>
    <div class="col-6 offset-3">
    <form action="/signup" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
            <lable for="username" class="form-label">Username</lable>
            <input 
            type="text"
            id="username"
            placeholder="enter username"
            name="username" 
            class="form-control"
            required
            />
        <div class="valid-feedback"> Username looks good</div>
        </div>
        <div class="mb-3">
            <lable for="email" class="form-label">Email-id</lable>
            <input 
            type="email" 
            placeholder="enter email-id" 
            name="email" 
            class="form-control" 
            required
            />
        </div>
        <div class="mb-3">
            <lable for="password" class="form-label">Password</lable>
            <input 
            type="password" 
            placeholder="enter a password" 
            name="password" 
            class="form-control" 
            required
            />
        </div>
        <button class="btn btn-success">SignUp</button>
    </form>
<p>Already have an account <a href="/login">Log In</a></p>
    </div>
</div>
