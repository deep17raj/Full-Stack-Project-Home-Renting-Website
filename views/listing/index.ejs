<% layout("/layouts/boilerplate") %>
<style>
  #filters{
    display: flex;
    flex-wrap: wrap;
    margin-top: 1rem;
    align-items: center;
  }
  .filter{
    margin-top: 1rem;
    text-align: center;
    margin-right: 1.6rem;
    color: rgba(0, 0, 0, 0.651);
    opacity: 0.7;
  }
  .filter:hover{
    opacity: 1;
    cursor: pointer;
  }
  .filter p{
    font-size: 0.8rem;
  }
  .link{
    color: rgba(0, 0, 0, 0.651);
    text-decoration: none;
  }
  .tax-info{
    display: none;
  }
  .tax-toggle{
    border: 1px solid rgba(0, 0, 0, 0.651);
    border-radius: 2rem;
    height: 3rem;
    padding: 1rem;
    margin-left: 1.1rem;
    display: flex;
    align-items: center;
  }
</style>

    <div class="mt-3 " id="filters">
      <div class="filter">
      <a class="link" href="/listings/filters/Beaches"><div><i class="fa-solid fa-umbrella-beach"></i></div>
        <p>Beaches</p></a>  
      </div>
      <div class="filter">
      <a class="link" href="/listings/filters/Castles"><div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p></a>  
      </div>
      <div class="filter">
      <a class="link" href="/listings/filters/Pools"><div><i class="fa-solid fa-person-swimming"></i></div>
        <p> Pools</p></a>  
      </div>
      <div class="filter">
      <a class="link" href="/listings/filters/Boats"><div><i class="fa-solid fa-sailboat"></i></div>
        <p>Boats</p></a>  
      </div>
      <div class="filter">
      <a class="link" href="/listings/filters/Arctic"><div><i class="fa-regular fa-snowflake"></i></div>
        <p> Arctic</p></a>  
      </div>
      <div class="filter">
      <a class="link" href="/listings/filters/Garden"><div><i class="fa-solid fa-tree"></i></div>
        <p>Garden</p></a>  
      </div>
      <div class="filter">
        <a class="link" href="/listings/filters/Games"> <div><i class="fa-solid fa-gamepad"></i></div>
        <p> Games</p></a>
      </div>
      
      <div class="filter">
      <a class="link" href="/listings/filters/Sports"><div><i class="fa-solid fa-football"></i></div>
        <p> Sports</p></a>  
      </div>
      <div class="filter">
      <a class="link" href="/listings/filters/Chef"><div><i class="fa-solid fa-kitchen-set"></i></div>
        <p> Chef</p></a>  
      </div>
      <div class="filter">
        <a class="link" href="/listings/filters/Camps"><div><i class="fa-solid fa-tent"></i></div>
        <p> Camps</p></a>
      </div>
      <div class="filter">
      <a class="link" href="/listings/filters/Theathre"><div><i class="fa-solid fa-film"></i></div>
        <p> Theathre</p></a>  
      </div>
      <div class="filter">
      <a class="link" href="/listings/filters/Sea_Facing"><div><i class="fa-solid fa-water"></i></div>
        <p> Sea Facing</p>
      </div></a>  
      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
        </div>
      </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
          <% for( let listing of allListing) { %>
            <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card col listing-card " >
        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
             <b><%= listing.title %></b> <br>
            Price: &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
            <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
          </p>
        </div>
      </div>
            </a>
    
      <% } %> 
    </div>
    
<script>
  let taxSwitch = document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("click",()=>{
    let taxes = document.getElementsByClassName("tax-info")
    for(tax of taxes){
      if(tax.style.display != "inline"){
        tax.style.display = "inline"
      }else{
        tax.style.display = "none"
      }
      
    }
  })
</script>
