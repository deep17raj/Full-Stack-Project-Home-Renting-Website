<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2">
    <br /><br />
    <h3>Create a new Listing</h3>
    <br />
    <form
      action="/listings"
      method="post"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <lable for="title" class="form-label">Title</lable>
        <input
          type="text"
          placeholder="Add a appealing title"
          name="listing[title]"
          class="form-control"
          required
        />
        <div class="valid-feedback">Title looks good</div>
        <div class="invalid-feedback">Title can't be empty</div>
      </div>
      <div class="mb-3">
        <lable for="description" class="form-label">Description</lable>
        <textarea
          class="form-control"
          name="listing[description]"
          placeholder="Add a description of your place"
          required
        ></textarea>
        <div class="valid-feedback">Description looks good</div>
        <div class="invalid-feedback">Description can't be empty</div>
      </div>
      <div class="mb-3">
        <lable for="image" class="form-label">Upload Image</lable>
        <input
          type="file"
          name="listing[image]"
          class="form-control"
        />
        <div class="invalid-feedback">Image link can't be empty</div>
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <lable for="price" class="form-label">Price</lable>
          <input
            id="price"
            placeholder="Add price per night"
            name="listing[price]"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Price is not valid</div>
        </div>

        <div class="mb-3 col-md-8">
          <lable for="country" class="form-label">Country</lable>
          <input
            type="text"
            placeholder="Add Country"
            name="listing[country]"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Country is not valid</div>
        </div>
      </div>
      <div class="mb-3">
        <lable for="location" class="form-label">Location</lable>
        <input
          type="text"
          placeholder="Add Location"
          name="listing[location]"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Location is not valid</div>
      </div>
      <div class="mb-3">
        <lable for="category" class="form-label">Category</lable>
       <select class="form-control "  name="listing[category]" id="category" required>
          <option value="Beaches">Beaches</option>
          <option value="Castles">Castles</option>
          <option value="Pools">Pools</option>
          <option value="Boats">Boats</option>
          <option value="Arctic">Arctics</option>
          <option value="Garden">Garden</option>
          <option value="Games">Games</option>
          <option value="Sports">Sports</option>
          <option value="Chef">Chef</option>
          <option value="Camps">Camps</option>
          <option value="Theathre">Theathre</option>
          <option value="Sea_Facing">Sea Facing</option>
          <option value="Others">Others</option>
        </select>
      </div>
      <br /><br />
      <button class="btn btn-dark add-btn">Add</button>
      <br /><br />
    </form>
  </div>
</div>
